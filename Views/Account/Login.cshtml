@model NewProject.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://img.freepik.com/free-vector/children-playing-carousel-park-playground-happy-kids-doing-outdoor-activities-boy-girl-playing-nature-outside_575670-742.jpg?t=st=1658718730~exp=1658719330~hmac=f2720043cbc56816f4682dfb452920c577263859255697f17b78ac5170d773a6&w=740"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="card bg-glass col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="card-body px-4 py-5">
        <a class="header">CRS KIDS CASE STUDY</a><br />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter a valid email address" asp-for="Email" />
            <label class="form-label" for="form3Example3" asp-for="Email">Email address</label>
             <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="form3Example4" class="form-control form-control-lg"
              placeholder="Enter password"  asp-for="Password" />
            <label class="form-label" for="form3Example4"  asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
             <button type="submit" class="btn btn-primary"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>

            <p class="small mt-2 pt-1 mb-0">Don't have an account? 
                <a asp-controller="Account" asp-action="Register" class="link-primary">Register</a></p>
          </div>

        </form>
      </div>
      </div>
    </div>
  </div>
</section>
<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.3.0/mdb.min.js"
></script>
